{% extends "BackOfficeBundle::layout.html.twig" %}

{% form_theme edit_form with ['bootstrap_3_layout.html.twig', _self] %}
{% form_theme delete_form with ['bootstrap_3_layout.html.twig', _self] %}

{% block content %}

    {% include "BackOfficeBundle:TypeDeVin:_type_contenu.html.twig" %}

    {% include "BackOfficeBundle:TypeDeVin:_back_liste.html.twig" %}
    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default col-lg-6">
                    {{ form_start(edit_form) }}
                    {{ form_row(edit_form.nameFr, { 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_row(edit_form.nameUk, { 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_row(edit_form.reference, { 'attr' : { 'class' : 'form-control' } }) }}
                    {{ form_widget(edit_form.submit, { 'attr' : { 'class' : 'btn submit btn-primary col-lg-6'} }) }}
                    {{ form_end(edit_form) }}
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Supprimer ?</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="col-lg-12 text-center"> 
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form.submit, { 'attr' : { 'class' : 'btn submit btn-danger'}, 'id' : 'btnDelete' }) }}
                    {{ form_end(delete_form) }}
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


{% endblock %}


{% block bottomJavascripts %}

    {{ parent() }}

    <script>
    $(document).ready(function() {
        $('#btnDelete').on('click',function(event){
            //event.preventDefault();
            return confirm('Supprimer d√©finitivement ?');
        })
    });
    </script>
{% endblock %}