{% extends "BackOfficeBundle::layout.html.twig" %}

{% form_theme delete_form with ['bootstrap_3_layout.html.twig', _self] %}

{% block content %}

    {% include "BackOfficeBundle:TypePays:_type_contenu.html.twig" %}

    {% include "BackOfficeBundle:TypePays:_back_liste.html.twig" %}
    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default col-lg-6">
                <p><strong>Nom Fr :</strong> {{entity.nameFr}}</p>
                <p><strong>Nom Uk :</strong> {{entity.nameUk}}</p>
                <p><strong>Référence :</strong> {{entity.reference}}</p>
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Supprimer ?</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="col-lg-12 text-center"> 
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form.submit, { 'attr' : { 'class' : 'btn submit btn-danger'}, 'id' : 'btnDelete' }) }}
                    {{ form_end(delete_form) }}
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


{% endblock %}


{% block bottomJavascripts %}

    {{ parent() }}

    <script>
    $(document).ready(function() {
        $('#btnDelete').on('click',function(event){
            //event.preventDefault();
            return confirm('Supprimer définitivement ?');
        })
    });
    </script>
{% endblock %}