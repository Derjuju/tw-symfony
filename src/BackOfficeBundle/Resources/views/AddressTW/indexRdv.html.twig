{% extends "BackOfficeBundle::layout.html.twig" %}

{% block content %}

    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Adresses Utilisateurs à ajouter</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Choisir un contenu à éditer
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables">
                            <thead>
                                <tr>
                                    <th width="10%">Id</th>
                                    <th width="18%">Nom</th>
                                    <th width="10%">Code postal</th>
                                    <th width="16%">Ville</th>
                                    <th width="15%">Département</th>
                                    <th width="15%">Région</th>
                                    <th width="16%" class="no-sort">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                <tr class="{% if loop.index is odd %}odd{% else %}even{% endif %}">
                                    <td>{{ entity.id }}</td>
                                    <td>{{ entity.name }}</td>
                                    <td>{{ entity.zipCode }}</td>
                                    <td>{{ entity.city }}</td>
                                    <td>{{ entity.departement }}</td>
                                    <td>{{ entity.region }}</td>
                                    <td align="center">
                                        <a class="btn btn-info btn-show btn-xs" href="{{path('back_office_adresse_tw_rdv_show',{'id':entity.id})}}"><i class="fa fa-eye fa-fw"></i> See</a>
                                        <a class="btn btn-primary btn-edit btn-xs" href="{{path('back_office_adresse_tw_rdv_edit',{'id':entity.id})}}"><i class="fa fa-pencil fa-fw"></i> Edit</a>
                                        {#<a class="btn btn-danger btn-delete btn-xs" href="{{path('back_office_adresse_tw_rdv_delete',{'id':entity.id})}}" onClick="return confirm('Supprimer définitivement ?');"><i class="fa fa-trash-o fa-lg"></i> Delete</a>#}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock %}


{% block bottomJavascripts %}

    {{ parent() }}

    <script>
    $(document).ready(function() {
        $('#dataTables').DataTable({
                responsive: true
        });
    });
    </script>
{% endblock %}