{% extends "BackOfficeBundle::layout.html.twig" %}

{% block bodyclass %}adresses_tw{% endblock %}

{% form_theme edit_form with ['bootstrap_3_layout.html.twig', _self] %}
{% form_theme delete_form with ['bootstrap_3_layout.html.twig', _self] %}

{% block content %}

    {% include "BackOfficeBundle:AddressTW:_type_contenu.html.twig" with {'entity':entity} %}

    {% include "BackOfficeBundle:AddressTW:_back_liste.html.twig" with {'entity':entity} %}
    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default col-lg-6">
                {{ form_start(edit_form, {'attr': {'class': 'form-inline', 'id': 'FormEditAddressTW'} }) }}
                
                
                <div class="row">
                {{ form_row(edit_form.name, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="row">
                {{ form_row(edit_form.street, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="row">
                {{ form_row(edit_form.zipCode, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="row">
                {{ form_row(edit_form.city, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="row">
                {{ form_row(edit_form.departement, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="row">
                {{ form_row(edit_form.region, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="row">
                {{ form_row(edit_form.country, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="row">
                {{ form_widget(edit_form.submit, { 'attr' : { 'class' : 'btn submit btn-primary col-lg-6'} }) }}                
                </div>
                {{ form_end(edit_form) }}
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    
    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Supprimer ?</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="col-lg-12 text-center"> 
                    {{ form_start(delete_form) }}
                    {{ form_widget(delete_form.submit, { 'attr' : { 'class' : 'btn submit btn-danger'}, 'id' : 'btnDelete' }) }}
                    {{ form_end(delete_form) }}
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


{% endblock %}


{% block bottomJavascripts %}

    {{ parent() }}

    <script>
    $(document).ready(function() {
    });
    </script>
{% endblock %}