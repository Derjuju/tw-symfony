                        if(!isOk){
                            alert('Votre image est trop grosse. Elle doit faire moins de 2Mo');
                        }
                        
                        return isOk;
                    }
                });
                return isOk;
                */
            });
            
            $('#EditBouteilleType_niveau').on('change', function(event){
                $('.level-bottle .the-fullness').css('top', (100 - $(this).val())+'%');
            });
            $('#EditBouteilleType_niveau').trigger('change');
            
            $('#EditBouteilleType_add_domaine').on('click',function(event){
                event.preventDefault();
                url = $(this).attr('data-url'); 
                title = 'Ajouter <strong>un type de domaine</strong>';
                openModalAddEntity(url, title);
            });
            
            $('#EditBouteilleType_add_appellation').on('click',function(){
                url = $(this).attr('data-url'); 
                title = 'Ajouter <strong>un type d\'appellation</strong>';
                openModalAddEntity(url, title);
            });
            
            $('#EditBouteilleType_add_cuvee').on('click',function(){
                url = $(this).attr('data-url'); 
                title = 'Ajouter <strong>un type de cuv√©e</strong>';
                openModalAddEntity(url, title);
            });
            
            $('#EditBouteilleType_add_region').on('click',function(){
                url = $(this).attr('data-url'); 
                title = 'Ajouter <strong>un type de r√©gion</strong>';
                openModalAddEntity(url, title);
            });
            
            $('#EditBouteilleType_add_pays').on('click',function(){
                url = $(this).attr('data-url'); 
                title = 'Ajouter <strong>un type de pays</strong>';
                openModalAddEntity(url, title);
            });
            
            
            function openModalAddEntity(url, title){
                $.ajax({
                    type : 'POST',
                    url : url,
                    data : null,
                    timeout : 60000,
                    success : function(htmlResponse) {

                          $('#myModal .modal-header').removeClass('hide');
                          $('#myModal h4').html(title);
                          $('#myModal .modal-body').html(htmlResponse);

                          $('#myModal').modal('show');
                    },
                    error : function(jqXHR, textStatus, errorThrown) {
                        console.log(textStatus);
                    }
                });
            }
            
            
            $(document).on('submit', 'form.add_new_domaine', function () {
                var form = $(this);                
                traitementForm(form, "#EditBouteilleType_typeDomaine");
                return false;
            });
            
            $(document).on('submit', 'form.add_new_appellation', function () {
                var form = $(this);                
                traitementForm(form, "#EditBouteilleType_typeAppellation");
                return false;
            });
            
            $(document).on('submit', 'form.add_new_cuvee', function () {
                var form = $(this);                
                traitementForm(form, "#EditBouteilleType_typeCuvee");
                return false;
            });
            
            $(document).on('submit', 'form.add_new_region', function () {
                var form = $(this);                
                traitementForm(form, "#EditBouteilleType_typeRegion");
                return false;
            });
            
            $(document).on('submit', 'form.add_new_pays', function () {
                var form = $(this);                
                traitementForm(form, "#EditBouteilleType_typePays");
                return false;
            });
            
            function traitementForm(form, cibleSelect) {

                xhr = $.ajax({
                    type: "POST",
                    url: form.attr('action'),
                    data: form.serialize(),
                    dataType: "json",
                    success: function (jsonResponse)
                    {
                        if(jsonResponse.result){
                            $('#myModal').modal('hide');
                            $(cibleSelect).append('<option value='+jsonResponse.id+'>'+jsonResponse.name+'</option>');
                            $(cibleSelect).val(jsonResponse.id);
                        }else{
                            alert('erreur de soumission');
                        }
                    }
                });
            };
            
            
            
        });
    </script>
{% endblock %}

