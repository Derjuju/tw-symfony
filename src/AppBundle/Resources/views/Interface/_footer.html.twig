<footer class="footer">
    <div class="footer-top wrapper">
        <ul class="link-container">
            <li><a href="{{path('front_notre_histoire')}}" class="{{ app.request.attributes.get('_route') == 'front_notre_histoire' ? 'active' }}">{{ "Notre histoire"|trans }}</a></li>
            <li><a href="{{path('front_contact')}}" class="{{ app.request.attributes.get('_route') == 'front_contact' ? 'active' }}">{{ "Contact"|trans }}</a></li>
        </ul>

        <ul class="link-container">
            <li><a href="{{path('front_partenaires')}}" class="{{ app.request.attributes.get('_route') == 'front_partenaires' ? 'active' }}">{{ "Partenaires"|trans }}</a></li>
            <li><a href="{{path('front_presse')}}" class="{{ app.request.attributes.get('_route') == 'front_presse' ? 'active' }}">{{ "Presse"|trans }}</a></li>
