        <ul class="link-container">
            <li>
                {{ "Plan du site"|trans }}
                <ul>
                    <li><a href="{{path('front_accueil')}}">{{ "Accueil"|trans }}</a></li>
                    {% if is_granted('ROLE_USER') %}
                    <li><a href="{{path('front_ma_cave')}}" class="{{ app.request.attributes.get('_route') == 'front_mon_espace' ? 'active' }}">{{ "Mon espace"|trans }}</a></li>
                    {% else %}
                    <li><a href="#" onClick="showLogin(); return false;" class="{{ app.request.attributes.get('_route') == 'front_mon_espace' ? 'active' }}">{{ "Mon espace"|trans }}</a></li>
                    {% endif %}
                </ul>
            </li>
        </ul>
        <div class="social-container">
            <div class="container">
                <a href="https://twitter.com/trocwine" target="_blank" title="TrocWine sur Twitter"><i class="twitter-icon"></i></a>
                <a href="https://instagram.com/trocwine/" target="_blank" title="TrocWine sur Instagram"><i class="instagram-icon"></i></a>
                <a href="https://www.facebook.com/trocwine" target="_blank" title="TrocWine sur Facebook"><i class="facebook-icon"></i></a>
                <a href="http://trocwine.tumblr.com/" target="_blank" title="TrocWine sur Tumblr"><i class="tumblr-icon"></i></a>
            </div>
        </div>
    </div>
    <div class="footer-bottom wrapper">
        <div class="left">
            <span>{{ "L'abus d'alcool est dangereux pour la santé, à consommer avec modération"|trans }}</span>
        </div>
        <div class="right">
            <a href="{{path('front_mentions_legales')}}" class="{{ app.request.attributes.get('_route') == 'front_mentions_legales' ? 'active' }}">{{ "Mentions légales"|trans }}</a> -
            <a href="{{path('front_politique_de_cookies')}}" class="{{ app.request.attributes.get('_route') == 'front_politique_de_cookies' ? 'active' }}">{{ "Politique de Cookies"|trans }}</a> -
            <a href="{{path('front_notre_histoire')}}" class="{{ app.request.attributes.get('_route') == 'front_notre_histoire' ? 'active' }}">TrocWine</a>
        </div>
    </div>
</footer>
{% if app.request.attributes.get('_route') != 'front_intro' and app.request.attributes.get('_route') != 'front_politique_de_cookies'  %}        
