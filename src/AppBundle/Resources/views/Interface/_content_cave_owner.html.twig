<div class="header-owner-info wrapper">
	<div class="span-left">
		<a href="#link-back" onClick="history.back(); return false;" class="btn-default"><i class="icon-arrow-left"></i> {{ "Retour"|trans }}</a>
	</div>
	<div class="profile-light span-center">
		<div class="left">
			<div class="profile-image" style="background-image: url('{% if troqueur.avatar != null %}{{asset(troqueur.avatar.file)|imagine_filter('avatar_resize_header')}}{% else %}{{asset('uploads/avatars/avatar_default.jpg')}}{% endif %}');"></div>
			<h3>{{troqueur.lastname}}<br>{{troqueur.firstname}}</h3>
		</div>
		<div class="right">
			<span class="owner-level">
                            {% if app.session.get( '_locale' ) == 'en' %}
                                {{troqueur.expertLevel.nameUk}}
                            {% else %}
                                {{troqueur.expertLevel.nameFr}}
                            {% endif %}
                        </span>
			<div class="star-container">
                                {% for i in range(1,5) %}
					{% if i <= troqueur.noteMoyenne %}
						<i class="icon-star-static full-star"></i>
					{% else %}
						<i class="icon-star-static"></i>
					{% endif %}
                                {% endfor %}
			</div>
		</div>
	</div>
        {% if is_granted('ROLE_USER') %}
	<div class="span-right">            
            <form id="FormSelectionChoix" action="{{path('front_troc_initialise', {'idTroqueur':troqueur.id})}}" method="POST">
                <input id="TroquerSelectionChoix" type="hidden" name="selectionSaCave" value="">
                <button id="btTroquerSelection" class="btn-default"  name="valider">{{"Troquer ma s√©lection"|trans}}</button>
            </form>
	</div>
        {% endif %}
</div>