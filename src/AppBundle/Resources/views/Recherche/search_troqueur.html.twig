{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Recherche de Troqueur - {{ parent() }}{% endblock %}

{% block bodyclass %}search search-troqueur{% endblock %}

{% block header %}
    {% set openSearchSelectorTroqueur = true %}
    {% set titreH1 = "Recherche de Troqueur" %}
    {% set use_red_title = true %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {{ parent() }}
    <section class="search-results-wrapper">
	<div class="wrapper">
		<div class="top">
                    <br><br><br><br>
			<div class="left sort">
				<div class="select-swagg">
					<select name="sort_by" class="sorter">
						<option value="" selected="selected">Classer par ...</option>
						<option value="lastname">A à Z</option>
						<option value="niveau">Niveau</option>
					</select>
				</div>
			</div>
			<div class="center">
				<span class="red">{{troqueurs|length}}</span> résultat{% if troqueurs|length > 1 %}s{% endif %}
			</div>
		</div>
                <div class="winethumb-container sort-container">
                    {% if troqueurs|length > 0 %}
                        {% for troqueur in troqueurs %}
                            {% include 'AppBundle:Troqueur:_blocTroqueur.html.twig' with {'troqueur' : troqueur} %}
                        {% endfor %}
                    {% else %}
                        Aucun résultat ne correspond.
                    {% endif %}
                </div>
        </div>
    </section>
{% endblock %}


{% block bottomJavascripts %}

    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
{% endblock %}

