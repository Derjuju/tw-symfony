{% extends 'AppBundle::layout.html.twig' %}

{% block title %}{{"Inscription"|trans}} - {{ parent() }}{% endblock %}

{% block bodyclass %}inscription{% endblock %}

{% block header %}
    {% set titreH1 = "Inscription"|trans %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {{ parent() }}
    <div class="site-wrapper"> 
        <div class="row"> 
            <div class="wrapper">  
                {% if app.session.get( '_locale' ) == 'en' %}
                <h2>Email already confirmed.</h2>
                <p>Your email has already been confirmed.</p>
                <p>Please check again the link you had received or contact us.</p>
                {% else %}
                <h2>Erreur de confirmation de votre inscription.</h2>
                <p>Votre adresse mail a déjà été confirmée.</p>
                <p>Merci de vérifier le lien que vous avez reçu ou contactez-nous.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}


{% block bottomJavascripts %}

    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
{% endblock %}

