{% block bodyclass %}homepage{% endblock %}

{% block content %}
    {{ parent() }}
    
    <section class="wrapper home-wrapper">

	<section class="featured-wines">
		<h2 class="title">Troquez des vins d'exception</h2>
		<span class="subtitle">Échangez vos bouteilles de vins entre amateurs ou experts</span>

		<ul class="featured-wines-thumbnails">
			<li style="background-image: url('{{asset('img/bordeaux.jpg')}}');"><a href="{{path('front_search_bouteille_ref_region', {'reference':'bordeaux'})}}" title="Recherche bouteilles de Bordeaux"><span>Bordeaux</span></a></li>
			<li style="background-image: url('{{asset('img/bourgogne.jpg')}}');"><a href="{{path('front_search_bouteille_ref_region', {'reference':'bourgogne'})}}" title="Recherche bouteilles de Bourgogne"><span>Bourgogne</span></a></li>
