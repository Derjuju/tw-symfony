<article class="winethumb type-region-{{bouteille.typeDeVin.reference}} {% if not bouteille.online %}offline{% endif %}"
        data-millesime="{{bouteille.millesime}}"
        data-qte="{{bouteille.quantite}}"
        data-order="{{bouteille.id}}">
    <a href="{{path('front_ma_cave_editer', {'id':bouteille.id}) }}">
        <div class="image" style="background-image: url('{% if bouteille.photo != null %}{{asset(bouteille.photo.file)|imagine_filter('bouteille_resize_cave')}}{% else %}{{asset('uploads/bouteilles/bouteille_default.jpg')}}{% endif %}');">
               <span class="dot-qte">{{bouteille.quantite}}</span>
       </div>
       <div class="description">
               <h3>{{bouteille.typeDomaine.nameFr|default('')}}</h3>
               <h3>{{bouteille.typeAppellation.nameFr|default('')}}</h3>
               <h3>{{bouteille.typeCuvee.nameFr|default('')}}</h3>

               <p>{{bouteille.typeRegion.nameFr}}<br>{{bouteille.typePays.nameFr}}<br>{{bouteille.millesime}}</p>               
       </div>       
       <div class="social-btns">
               <a href="https://twitter.com/share" data-url="{{path('front_bouteille_fiche', {'id':bouteille.id})}}" class="twitter-share-button" data-count="none">Tweet</a> <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
               <div class="fb-share-button" data-href="{{path('front_bouteille_fiche', {'id':bouteille.id})}}" data-layout="button"></div>
       </div>
       <div class="clearfix"></div>
    </a>
       {% if not bouteille.online %}
       <div class="attente-validation">
           Bouteille non visible !<br>
           En attente de validation par TrocWine.
       </div>
       {% endif %}
       {#
       <div class="actions-btns">
        <a href="{{path('front_ma_cave_editer', {'id':bouteille.id}) }}" class="btn-default btn-edit">modifier</a>
        <a href="{{path('front_ma_cave_supprimer', {'id':bouteille.id}) }}" onClick="return confirmSuppression();" class="btn-default btn-delete">supprimer</a>
       </div>
       #}
</article>
