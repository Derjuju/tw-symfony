{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Fiche bouteille n° {{ bouteille.id }} - {{ parent() }}{% endblock %}

{% block bodyclass %}fiche-bouteille{% endblock %}

{% block header %}
    {% set withoutSearchSelector = true %}
    {% set bottle_owner = true %}    
    {% set withoutTrocAction = true %}
    {% set titreH1 = "Fiche bouteille n°"~bouteille.id %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {{ parent() }}  
    <section class="bottle-page-wrapper">
	<section class="bottle-info-wrapper">
		<div class="wrapper">
			<div class="image-container">
				<div class="upload-image-container">
					<div data-imagezoom="{% if bouteille.photo != null %}{{asset(bouteille.photo.file)}}{% else %}{{asset('uploads/bouteilles/bouteille_default.jpg')}}{% endif %}" class="wine-image" style="background-image: url('{% if bouteille.photo != null %}{{asset(bouteille.photo.file)|imagine_filter('bouteille_resize_fiche')}}{% else %}{{asset('uploads/bouteilles/bouteille_default.jpg')}}{% endif %}');">
						<span class="dot-qte">{{bouteille.quantite}}</span>
					</div>
				</div>
				<div class="rating">
					<span class="text">Ma note</span>
					<span class="icon-bottle-rate-container icon-rate" id="ratingBottle">
					    <input type="radio" id="rating-input-1-5" name="personnal-rating" value="5" disabled="disabled" {% if bouteille.note == 5 %}checked="checked"{% endif %}>
					    <label for="rating-input-1-5"></label>
					    <input type="radio" id="rating-input-1-4" name="personnal-rating" value="4" disabled="disabled" {% if bouteille.note == 4 %}checked="checked"{% endif %}>
					    <label for="rating-input-1-4"></label>
					    <input type="radio" id="rating-input-1-3" name="personnal-rating" value="3" disabled="disabled" {% if bouteille.note == 3 %}checked="checked"{% endif %}>
					    <label for="rating-input-1-3"></label>
					    <input type="radio" id="rating-input-1-2" name="personnal-rating" value="2" disabled="disabled" {% if bouteille.note == 2 %}checked="checked"{% endif %}>
					    <label for="rating-input-1-2"></label>
					    <input type="radio" id="rating-input-1-1" name="personnal-rating" value="1" disabled="disabled" {% if bouteille.note == 1 %}checked="checked"{% endif %}>
					    <label for="rating-input-1-1"></label>
					</span>
				</div>
                                <div class="social-btns">
                                        <a href="https://twitter.com/share" data-url="{{path('front_bouteille_fiche', {'id':bouteille.id})}}" class="twitter-share-button" data-count="none">Tweet</a> <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
                                        <div class="fb-share-button" data-href="{{path('front_bouteille_fiche', {'id':bouteille.id})}}" data-layout="button"></div>
                                </div>
			</div>
			<div class="bottle-info">
				<div class="title">
                                    <h2>{{bouteille.typeDomaine.nameFr|default('')}} {{bouteille.typeAppellation.nameFr|default('')}}<br>{{bouteille.typeCuvee.nameFr|default('')}}</h2>					
					<span>{{bouteille.typeRegion.nameFr|default('')}}</span>
					<span>{{bouteille.typePays.nameFr|default('')}}</span>
					<span>{{bouteille.millesime|default('')|filtre_millesime}}</span>
				</div>

				<div class="info">
					<p>
						<b>{{bouteille.quantite}} bouteille{% if bouteille.quantite > 1 %}s{% endif %},</b>
						conservée{% if bouteille.quantite > 1 %}s{% endif %} en {{bouteille.typeDeCave.nameFr}}
					</p>

					<p>{{bouteille.commentaire}}</p>

					<div class="star-container">
						<span class="text">Note moyenne</span>
                                                {#
						<?php for($i = 1; $i <= 5; $i++): ?>
							<?php if($i <= $bottle_info['rate']): ?>
								<i class="icon-star-static full-star"></i>
							<?php else: ?>
								<i class="icon-star-static"></i>
							<?php endif; ?>
						<?php endfor; ?>
                                                #}
					</div>
				</div>
			</div>
                        {% if is_granted('ROLE_USER') %}
			<div class="mobile-hide">
				<div class="qte-level">
					<div class="level-container">
						<!-- Pour remplir la bouteille, utilisez style="top: xx%;" sur .the-fullness -->
						<div class="level-bottle">
							<div class="the-shape"></div>
							<div class="the-emptyness"></div>
							<div class="the-fullness" style="top:{{100 - bouteille.niveau}}%"></div>
						</div>
						<h4>Niveau : 
                                                    {% if bouteille.niveau >= 80 %}Normal{% endif %}
                                                    {% if bouteille.niveau == 77 %}Bas goulot{% endif %}
                                                    {% if bouteille.niveau == 75 %}Très légèrement bas{% endif %}
                                                    {% if bouteille.niveau == 72 %}Légèrement bas{% endif %}
                                                    {% if bouteille.niveau == 70 %}Haute épaule{% endif %}
                                                    {% if bouteille.niveau == 65 %}Mi-épaule{% endif %}
                                                    {% if bouteille.niveau == 60 %}Bas{% endif %}
                                                </h4>
					</div>
				</div>
			</div>
                        {% endif %}
		</div>
	</section>
</section>
{% endblock %}


{% block bottomJavascripts %}

    {{ parent() }}
    
    <script type="text/javascript">
        $(document).ready(function () {
                        
        });
    </script>
    
{% endblock %}

