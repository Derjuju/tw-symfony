{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Contact - {{ parent() }}{% endblock %}

{% block bodyclass %}contact{% endblock %}

{% block header %}
    {% set titreH1 = "Contact" %}
    {% set use_red_title = true %}
    {{ parent() }}
{% endblock %}

{% block content %}
    {{ parent() }}
    
    <div class="site-wrapper"> 
        <div class="row"> 
            <div class="wrapper contact-wrapper">
                <p class="contact-text">{{"Vous avez des questions à propos de TrocWine, ou vous souhaitez nous faire une remarque ?"|trans}}</p>
                <p class="contact-text"><strong>{{"Nous vous répondons tous les jours !"|trans}}</strong></p>
                <a href="mailto:info@trocwine.com" class="btn-serif">{{"Contactez-nous"|trans}}</a>
            </div>
        </div>
    </div>
{% endblock %}


{% block bottomJavascripts %}

    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
{% endblock %}

